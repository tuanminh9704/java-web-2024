<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.javaweb</groupId>
	<artifactId>spring-boot-non-jwt</artifactId>
	<version>1.0</version>

	<!-- Nâng cấp Spring Boot lên phiên bản mới hơn -->
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.7.6</version> <!-- Sử dụng phiên bản Spring Boot 2.7.6 -->
		<relativePath /> <!-- Look up parent from repository -->
	</parent>

	<properties>
		<java.version>1.8</java.version> <!-- Vẫn giữ Java 8 -->
	</properties>

	<dependencies>
		<!-- Sử dụng Spring Boot Starter Web Services -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web-services</artifactId>
		</dependency>
		<dependency>

			<groupId>mysql</groupId>

			<artifactId>mysql-connector-java</artifactId>

			<version>8.0.30</version>

		</dependency>
	</dependencies>
</project>